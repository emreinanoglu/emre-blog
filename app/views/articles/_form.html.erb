<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors'%>
            <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="input-group mb-3">
                    <%= f.label :title, class: "col-2 col-form-label fw-bold text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title article"  %>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <%= f.label :description, class:"col-2 col-form-label fw-bold text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description article" %>
                    </div>
                </div>
                <div class="input-group mb-3 justify-content-center">
                    <%= f.submit class:"btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class="col-auto mb-3">
            <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "fw-bold text-info text-decoration-none"%>
        </div>
    </div>
</div>